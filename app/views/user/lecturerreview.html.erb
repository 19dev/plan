<link type="text/css" rel="stylesheet" href="/stylesheets/datatable.css"/>
<script type="text/javascript" src="/javascripts/jquery.js"></script>
<script type="text/javascript" src="/javascripts/jquery.dataTables.js"></script>

<script type="text/javascript" charset="utf-8">
  $(document).ready(function() {
      oTable = $('#example').dataTable({
        "bJQueryUI": true,
        "sPaginationType": "full_numbers"
      });
  });
</script>
<div class="page">
  <h2 id="headline"><%= session[:department] %> bölümünün hocaları inceleniyor...</h2>
   <div class="dt_example module">
   <table cellpadding="0" cellspacing="0" border="0" class="display" 
       id="example">
   <thead>
    <tr>
      <th class="label">Fotoğraf</th>
      <th class="label">Adı</th>
      <th class="label">Soyadı</th>
      <th class="label">Email</th>
      <th class="label">İş telefonu</th>
      <th class="label">Cep telefonu</th>
      <th class="label">Bölüm başkanı mı?</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @lecturers.each do |lecturer| %>
      <tr>
        <td class="label"><%= image_tag "/images/#{lecturer.photo}", :width => 26, :height => 26 %></td>
        <td class="label"><%= lecturer.first_name %></td>
        <td class="label"><%= lecturer.last_name %></td>
        <td class="label"><%= lecturer.email %></td>
        <td class="label"><%= lecturer.work_phone %></td>
        <td class="label"><%= lecturer.cell_phone %></td>
        <td class="label"><% if lecturer.status == 1 %>evet<% else %>hayır<% end %></td>
        <td class="label" style="float:left;width:92px">
          <%= form_tag :action => 'lecturershow' do %>
            <%= hidden_field_tag :lecturer_id, lecturer.id %>
            <%= submit_tag "",:id => "review_button" %>
          <% end %>
          <%= form_tag :action => 'lectureredit' do %>
            <%= hidden_field_tag :lecturer_id, lecturer.id %>
            <%= submit_tag "",:id => "edit_button" %>
          <% end %>
          <%= form_tag :action => 'lecturerdel' do %>
            <%= hidden_field_tag :lecturer_id, lecturer.id %>
            <%= submit_tag "", :id => "delete_button", :confirm => 'Silmek istediğinizden emin misiniz?' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
  </table>
  </div>
</div>
