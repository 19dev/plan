<h2>Hesap Bilgilerini Düzenle</h2>
<%= form_tag({ :action => 'accountupdate' }, :multipart => true) do %>
  <table class="custom">
    <tr>
      <td class="label">Fotoğraf</td>
      <td>
        <%= file_field_tag :file %>
        <%= image_tag @people.photo, :width => 56, :height => 56 %>
      </td>
    </tr>
    <tr>
      <td class="label"> Ad: </td>
      <td><%= @people.first_name %></td>
    </tr>
    <tr>
      <td class="label"> Soyad: </td>
      <td><%= text_field_tag :last_name, @people.last_name %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= submit_tag "Güncelle", :id => "submit_button" %></td>
    </tr>
  </table>
<% end %>
