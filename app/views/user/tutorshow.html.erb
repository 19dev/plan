<div class="page">
  <h2 id="headline"><%= session[:department] %> bölümünün öğretim görevlisi bilgileri</h2>
  <table class="custom">
    <tr>
      <td class="label">Adı</td>
      <td class="field"><%= @tutor.first_name %></td>
    </tr>
    <tr>
      <td class="label">Soyadı</td>
      <td class="field"><%= @tutor.last_name %></td>
    </tr>
    <tr>
      <td class="label">Fotoğraf</td>
      <td class="field"><img src="/images/<%= @tutor.photo %>"/></td>
    </tr>
    <tr>
      <td class="label">Email</td>
      <td class="field"><%= @tutor.email %></td>
    </tr>
    <tr>
      <td class="label">İş telefonu</td>
      <td class="field"><%= @tutor.work_phone %></td>
    </tr>
    <tr>
      <td class="label">Cep telefonu</td>
      <td class="field"><%= @tutor.cell_phone %></td>
    </tr>
    <tr>
      <td class="label">Bölüm başkanı mı?</td>
      <td class="field">
        <% if @tutor.status == 1 %> evet
        <% else %>                  hayır
        <% end %>
      </td>
    </tr>
    <tr>
      <td></td>
      <td>
        <%= form_tag({ :action => 'tutoradd' }, :multipart => true) do %>
          <%= submit_tag "Düzenle", :id => "submit_button" %>
        <% end %>
        <%= form_tag({ :action => 'tutoradd' }, :multipart => true) do %>
          <%= submit_tag "Sil", :id => "submit_button", :confirm => 'Silmek istediğinizden emin misiniz?'%>
        <% end %>
      </td>
    </tr>
  </table>
</div>
