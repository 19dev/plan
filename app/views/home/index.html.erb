<div id="login">
	<% form_tag :action => 'find' do %>
	<table class="form">
	<tr>
		<td class="label"> departments: </td>
		<td class="field">
			<select name="id">
				<option value="" selected></option>
			<% @departments.each do |t| %>
				<option value="<%= t.id %>"><%= t.name %></option>
			<% end %>
			</select>
		</td>	
	</tr>
	<tr>
		<td class="label"> name: </td>
		<td class="field">
			<%= text_field_tag :name %>
		</td>	
	</tr>
	<tr>
		<td></td>
		<td>
			<%= submit_tag "arama yap", :id => "student_user_submit" %>
		</td>
	</tr>
	</table>
	<% end %>
</div>
