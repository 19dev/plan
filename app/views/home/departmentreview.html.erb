<h2>
    <%= link_to @period.full_name + " / " + @department.name,
      "/home/departmentreview/#{@period.id}/#{@department.id}" %>
</h2>
<table cellpadding="0" cellspacing="0" border="0" class="custom"
  id="example">
  <thead>
    <tr id="headline">
      <th></th>
      <th>Ad</th>
      <th>Soyad</th>
      <th colspan="3">İşlem</th>
    </tr>
  </thead>
  <tbody>
    <% @lecturers.each do |lecturer| %>
      <tr id="headline">
        <td>
          <div id="image-box">
            <table>
              <tr>
                <td class="small">
                  <%= image_tag lecturer.photo %>
                </td>
              </tr>
            </table>
          </div>
        </td>
        <td class="field"><%= lecturer.first_name %></td>
        <td class="field"><%= lecturer.last_name %></td>
        <td><%= link_to "Bilgi", "/home/lecturershow/#{@period.id}/#{lecturer.id}", :class=>"button" %></td>
        <td>
          <%= link_to "Ders Programı", "/home/lecturerplan/#{@period.id}/#{lecturer.id}", :class=>"button" %>
        </td>
        <td>
          <%= link_to "Pdf Çıktı", "/home/lecturerplanpdf/#{@period.id}/#{lecturer.id}", :class => "button danger", :id=>"pdf_buttonx32" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
