<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <style>
    #logo tr img {width:60px;}
    #logo td {width:70px;}
  </style>
</head>
<body style="background-color:white;">

  <!--PLATFORM BAR-->
  <div class="platform-bar">
    <div class="row bar-content" style="margin-left:205px;">
      <span class="title">
        <a href="http://mf.omu.edu.tr">
          ONDOKUZ MAYIS ÜNİVERSİTESİ MÜHENDİSLİK FAKÜLTESİ
        </a>
      </span>
      <ul class="related hide-on-mobile">
        <li>
        <a href="/home/index">
          Ana Sayfa</a>
        </li>
        <li>
        <a href="/user/">
          User</a>
        </li>
        <li>
        <a href="/home/info">
          Hakkında</a>
        </li>
      </ul>
    </div>
  </div>
  <!--PLATFORM BAR END-->

  <div id="logo">
    <%= image_tag "/images/mf-256x256.png", :width=> 150, :height=>150%>
    <h1 style="font-family:'Proxima';font-weight:bold;color:#555;font-size:15px;height:45px;margin-top:-50px;margin-left:250px;">
      OMÜ Mühendislik Fakültesi Program Arama Sistemi
    </h1>
  </div>
  <% page = File.basename request.fullpath %>
  <div style="margin-left:205px;">
    <div class="row">
      <ul class="sub-nav">
        <li class="<%= 'current' if ["index"].include?(page) %>">
        <a href="/home/index" title="Ana Sayfa">
          Ana Sayfa
        </a>
        </li>
        <li class="<%= 'current' if ["find", "review"].include?(page) %>">
        <a href="/home/find">
          Arama
        </a>
        </li>
        <li class="<%= 'current' if ["auto", "show"].include?(page) %>">
        <a href="/home/auto">
          Hızlı Arama
        </a>
        </li>
      </ul>
    </div>
  </div>

  <% if session[:error] %>
    <div class="error2"><%= session[:error] %></div>
  <% end %>

  <% if session[:notice] %>
    <div class="notice2"><%= session[:notice] %></div>
  <% end %>

  <div id="content">
    <%= yield %>
  </div>

</body>
</html>
