<!DOCTYPE html>
<html>
<head>
  <title>Schedule</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<% if @error %>
	<div id="notice"><p class="fail"><%= @error %></p></div>
<% end %>

<% if @correct %>
	<div id="notice"><p class="success"><%= @correct %></p></div>
<% end %>

<div id="content">
	<h2 id="headline"><%= @say %> </h2>
	<%= yield %>
</div>

</body>
</html>
