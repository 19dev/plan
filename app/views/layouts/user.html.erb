<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <!-- multiselect -->
  <link href="/stylesheets/multi-select.css" rel="stylesheet" type="text/css">
  <script src="/javascripts/jquery.js" type="text/javascript"></script>
  <script src="/javascripts/jquery.multi-select.js" type="text/javascript"></script>
  <script src="/javascripts/app.js" type="text/javascript"></script>
  <!-- end multiselect -->
  <style>
    #column {width:930px;}
    #column tr img {width:50px;}
    #column td {width:75px;}
    .page{margin-top:125px;margin-left:0px;width:930px}
  </style>
</head>
<body>
  <% if session[:user] %>
    <div id="wrapper">
      <div id="container">
        <ul class="tabs" id="mainNav">
          <li class="current">
            <a href="/user/giris" title="Kullanıcı adınız"><%= session[:username] %></a>
          </li>
          <li class="green">
            <a href="logout" title="Çıkış">Çıkış</a>
          </li>
        </ul>
      </div>
    </div>
  <% end %>

  <% if session[:error] %>
    <div class="error"><h3>Bir problemimiz var</h3><%= session[:error] %></div>
  <% end %>

  <% if session[:notice] %>
    <div class="notice"><h3>Bir başarı iletisi var</h3><%= session[:notice] %></div>
  <% end %>

  <div id="content">
    <% if session[:user] %>
      <div id="column">
        <table>
          <tr>
          <td>
              <a href="lecturernew" title="">
		<img src="/images/default.png"/>Hoca ekle</a>
          </td>
          <td>
              <a href="lecturerreview" title="">
                <img src="/images/review.png"/>Hoca İncele</a>
          </td>
          <td>
              <a href="coursenew" title="">
                <img src="/images/lesson.png"/>Ders Ekle</a>
          </td>
          <td>
              <a href="coursereview" title="">
                <img src="/images/review.png"/>Ders İncele</a>
          </td>
          <td>
              <a href="assignmentnew" title="">
                <img src="/images/schedule.png"/>Atama yap</a>
          </td>
          <td>
              <a href="find" title="">
                <img src="/images/review.png"/>Atama incele</a>
          </td>
          <!--
          <tr><td>
              <a href="csv" title="">
                <img src="/images/csv.png"/>Csv Çıktı</a>
          </td></tr>
          -->
        </tr>
      </table>
      </div>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>
