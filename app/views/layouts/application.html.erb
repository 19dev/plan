<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

  <% if @error %>
    <div id="notice"><p class="fail"><%= @error %></p></div>
  <% end %>

  <% if @correct %>
    <div id="notice"><p class="success"><%= @correct %></p></div>
  <% end %>

 <div id="content">
    <%= yield %>
  </div>

</body>
</html>
