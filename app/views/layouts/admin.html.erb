<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= stylesheet_link_tag "style-admin"%>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "dashboard" %>
  <%= csrf_meta_tag %>
  <style>
    .success, .error{ width:400px; margin-top:-40px; }
  </style>
</head>
<body>

<% if session[:admin] %>
  <div id="wrapper">
    <div id="container">
      <ul class="tabs" id="mainNav">
        <li class="home current">
          <a href="/admin/home" title="Kullanıcı adınız"><%= session[:adminusername] %></a>
        </li>
        <li class="magenta">
        <a href="info"
          title="Bilgilendirme sayfası">Bilgilendirme</a>
        </li>
        <li class="logout">
        <a href="logout" title="Çıkış">Çıkış</a>
        </li>
      </ul>
    </div>
  </div>
<% end %>

<% if session[:error] %>
  <div id="notice">
    <div class="error">
      <h3 id="errorline">Bir problemimiz var!</h3>
      <%= session[:error] %>
    </div>
  </div>
<% end %>

<% if session[:success] %>
  <div id="notice">
    <div class="success">
      <h3 id="successline">Bir başarı iletisi var!</h3>
      <%= session[:success] %>
    </div>
  </div>
<% end %>

<% if session[:admin] %>
  <div id="usermenu">
    <div class="usermenulist">
      <ul>
        <li><a class="home" href="/admin/home">Ana Sayfa</a></li>
        <li><a class="db" href="/admin/database">Veri Tabanı Yönetimi</a></li>
        <li><a class="system" href="/admin/system">Sistem Yönetimi</a></li>
        <li><a class="support" href="/admin/help">Yardım Sayfasını Güncelle</a></li>
      </ul>
    </div>
  </div>
<% end %>

<div id="content">
  <% if session[:admin] %>
    <% page = File.basename request.fullpath %>
    <% if ["database","review","edit","show","new","find","export"].include? page %>
      <%= render :partial => "database_menu" %>
    <% end %>
  <% end %>
  <%= yield %>
</div>

<div id="footer">
  <ul class="recent photos">
    <li><a href="http://ce.omu.edu.tr" title="Bilgisayar Mühendisliği">
      <%= image_tag "/assets/19-normal-57x57.png", :width => 26, :height => 26 %>
    </a></li>
  </ul>
    copyright &copy; 2011 Mühendislik Fakültesi Eğitim Öğretim Planları<br/>
    <b>irtibat</b> : <code id="errorline">web@bil.omu.edu.tr</code>
</div>

</body>
</html>
