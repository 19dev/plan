<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <style>
    #column {width:920px;}
    #column tr img {width:35px;}
    #column td {width:200px;}
    .page{margin-top:50px;margin-left:0px;width:920px}
  </style>
</head>
<body>
  <% if session[:admin] %>
    <div id="wrapper">
      <div id="container">
        <ul class="tabs" id="mainNav">
          <li class="home">
            <a href="/admin/home" title="Kullanıcı adınız"><%= session[:adminusername] %></a>
          </li>
          <li class="magenta">
          <a href="info"
            title="Bilgilendirme sayfası">Bilgilendirme</a>
          </li>
          <li class="logout">
          <a href="logout" title="Çıkış">Çıkış</a>
          </li>
        </ul>
      </div>
    </div>
  <% end %>

  <% if session[:error] %>
    <div id="notice">
      <div class="error">
        <h3 id="errorline">Bir problemimiz var!</h3>
        <%= session[:error] %>
      </div>
    </div>
  <% end %>

  <% if session[:success] %>
    <div id="notice">
      <div class="success">
        <h3 id="successline">Bir başarı iletisi var!</h3>
        <%= session[:success] %>
      </div>
    </div>
  <% end %>

  <div id="content">
    <% if session[:admin] %>
      <div id="column">
        <table>
          <tr>
            <td>
                <img src="/images/table.png"/><%= session[:TABLE] %>
            </td>
            <td>
                <img src="/images/save.png"/><%= session[:SAVE] %>
            </td>
            <td>
                <a href="home" title="">
                  <img src="/images/tables.png"/>Tablolar</a>
            </td>
            <td>
                <a href="review" title="">
                  <img src="/images/review.png"/>Tablo İncele</a>
            </td>
            <td>
                <a href="new" title="">
                  <img src="/images/add.png"/>Ekle</a>
            </td>
            <td>
                <a href="find" title="">
                  <img src="/images/find.png"/>Bul</a>
            </td>
        </tr>
          <!--
          <tr><td>
              <a href="csv" title="">
                <img src="/images/csv.png"/>Csv Çıktı</a>
          </td></tr>
          -->
        </table>
      </div>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>
