<div class="page">
  <h2 id="headline">HOŞGELDİNİZ</h2>
  Veritabanının ilgili tablosunu seçiniz.
  <% form_tag :action => 'table' do %>
    <table class="custom">
      <tr>
        <td class="label">tablo:</td>
        <td class="field">
          <%= select_tag :table, options_for_select(session[:TABLES].keys.map {|key| key.to_s}) %>
        </td>
      </tr>
      <tr>
        <td></td>
        <td><%= submit_tag "Seç", :id => "submit_button" %></td>
      </tr>
    </table>
  <% end %>
</div>
